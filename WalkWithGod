<script>
function toggleMenu() {
    document.getElementById("sidebar").classList.toggle("open");
}

function showTab(tab) {
    document.querySelectorAll("main > div").forEach(div => div.classList.add("hidden"));
    document.getElementById(tab).classList.remove("hidden");
    toggleMenu();
}
</script>

